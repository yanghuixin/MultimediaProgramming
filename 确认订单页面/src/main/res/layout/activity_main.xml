<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yhx.textpackage.MainActivity">

    <RelativeLayout
        android:id="@+id/title_product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backa_title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/backText_title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backa_title_product"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="确认订单"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_product_details"
        android:layout_marginBottom="18dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/leftFragment_product_details"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/ly1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:text="收货人:"
                        android:textSize="15sp"
                        android:textColor="#191919"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="83dp"
                        android:text="Jasper"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#1a1a1a"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="18911120001"
                        android:textSize="15sp"
                        android:textColor="#1a1a1a"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="(默认)"
                        android:textSize="12sp"
                        android:textColor="#6f6f6f"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ly1"
                    android:layout_marginBottom="26dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:text="收货地址:"
                        android:textSize="15sp"
                        android:textColor="#191919"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text="北京市丰台区园博园路12号"
                        android:textSize="15sp"
                        android:textColor="#191919"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="更改收货地址"
                        android:textSize="15sp"
                        android:textColor="#08c9ff"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="65dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="#e6e6e6"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="蓝莓叶黄素胶囊0.3g/粒*60粒*2瓶套餐"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="规格:  0.3g/粒*60粒*2瓶套餐"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥276."
                                android:textSize="15sp"
                                android:textColor="#fe6e00"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_price"
                                android:layout_gravity="bottom"
                                android:text="00"
                                android:textSize="12sp"
                                android:textColor="#fe6e00"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="84dp"
                        android:text="x2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                </LinearLayout>
                <View
                    android:layout_width="840dp"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/big_productImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="65dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="#e6e6e6"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CONBA/康恩贝维生素E软胶囊+维生素C咀嚼片"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="规格:  0.3g/粒*60粒*2瓶套餐"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥69."
                                android:textSize="15sp"
                                android:textColor="#fe6e00"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_price2"
                                android:layout_gravity="bottom"
                                android:text="00"
                                android:textSize="12sp"
                                android:textColor="#fe6e00"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="84dp"
                        android:text="x1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:text="配送方式："
                        android:textSize="15sp"
                        android:textColor="#191919"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="快递：免运费"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#1b1b1b"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:text="买家留言：请将纸质发票同商品一起快递过来谢谢!"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="合计  "
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1"
            android:text="￥345."
            android:textColor="#fe6e00"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2"
            android:layout_gravity="bottom"
            android:text="00"
            android:textSize="12sp"
            android:textColor="#fe6e00"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv3"
            android:text="提交订单"
            android:background="#fe6e00"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
